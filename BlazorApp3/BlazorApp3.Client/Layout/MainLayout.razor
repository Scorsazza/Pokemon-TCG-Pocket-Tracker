@inherits LayoutComponentBase

<div class="page" style="display: flex; flex-direction: column; min-height: 100vh; background: transparent;">
    <NavMenu />

    <main style="flex: 1; background: transparent;">
        <article style="padding: 2rem; background: transparent; min-height: calc(100vh - 90px);">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet style="background: #2a2d3a; bottom: 0; box-shadow: 0 -1px 2px rgba(0, 0, 0, 0.2); display: none; left: 0; padding: 0.6rem 1.25rem 0.7rem 1.25rem; position: fixed; width: 100%; z-index: 1000; color: #e2e8f0; border-top: 2px solid #8b5cf6;">
    An unhandled error has occurred.
    <a href="." style="color: #8b5cf6; font-weight: 600;">Reload</a>
    <span class="dismiss" style="cursor: pointer; position: absolute; right: 0.75rem; top: 0.5rem; color: #8b5cf6; font-size: 1.2rem;">🗙</span>
</div>